
snippet incom "common includes" b
#include <iostream>
#include <string>
#include <cstdio>
#include <vector>
#include <algorithm>
endsnippet

snippet fdoc "Generate the document for file" b
/****************************************************************************
 * Filename:    `!v expand('%')`
 * Author:      ${1:your name}
 * Date:        `!v strftime('%Y-%m-%d')`
 * Description: ${3:...}
 ***************************************************************************/
endsnippet

snippet using "using namespace ...;" b
using namespace ${1:std};
endsnippet

snippet ind "#include ..." b
#include "${1:...}"
endsnippet

snippet sma "std::max()"
std::max(${1:}, ${2:})
endsnippet

snippet smi "std::mix()"
std::min(${1:}, ${2:})
endsnippet

snippet main "int main(...)"
int main(int argc, char *argv[]) {
	${VISUAL}$0
	return 0;
}
endsnippet

snippet fori "for loop ++"
for (${1:int} ${2:i} = ${3:0}; $2 < ${4:count}; ${5:++$2}) {
	${VISUAL}$0
}
endsnippet

snippet ford "for loop --"
for (${1:int} ${2:i} = ${3:count}; $2 >= ${4:0}; ${5:--$2}) {
	${VISUAL}$0
}
endsnippet
